{
  "name": "dmi-candidate-screener",
  "version": "1.0.0",
  "author": "Diviyansh Bhatnagar",
  "license": "MIT",
  "scripts": {
    "start": "cross-env NODE_ENV=production node .dist/index.js",
    "start-ts": "ts-node -r dotenv/config --project tsconfig.server.json server/index.ts",
    "dev": "nodemon --exec \"yarn start-ts\" --ext js --ext ts --watch server",
    "build": "next build && tsc --project tsconfig.server.json"
  },
  "dependencies": {
    "bulma": "^0.7.5",
    "express": "^4.17.1",
    "next": "^9.0.6",
    "node-sass": "^4.12.0",
    "passport": "^0.4.0",
    "passport-azure-ad": "^4.1.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-hook-form": "^3.23.9",
    "serve-favicon": "^2.5.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.1",
    "@types/node": "^12.7.5",
    "@types/passport": "^1.0.1",
    "@types/passport-azure-ad": "^4.0.3",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "@types/serve-favicon": "^2.2.31",
    "@zeit/next-sass": "^1.0.1",
    "@zeit/next-source-maps": "^0.0.3",
    "cross-env": "^6.0.0",
    "dotenv": "^8.1.0",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "nodemon": "^1.19.2",
    "prettier": "^1.18.2",
    "ts-node": "^8.1.0",
    "typescript": "^3.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,css,json,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
